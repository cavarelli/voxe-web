!!! HTML
%html
  %head
    %title Voxe Back Office
    = include_gon
    = stylesheet_link_tag 'backoffice/application'
    = javascript_include_tag 'backoffice/backoffice'
    = javascript_include_tag 'backoffice/propositions/applications'
    = csrf_meta_tags
    = yield :head
  %body
    .navbar
      .navbar-inner
        .container
          = link_to 'Voxe Backoffice', backoffice_root_url, class: 'brand'
          .nav-collapse.collapse
            %ul.nav
              %li= link_to t('backoffice.my_profile'), backoffice_my_profile_path
              %li= link_to t('backoffice.my_propositions'), backoffice_propositions_path
    .container= yield

    = javascript_include_tag 'backoffice/application'
    = yield :javascript
